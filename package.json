{
  "name": "vidstack-workspace",
  "version": "1.6.5",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build --filter=./packages/*",
    "build:vidstack": "turbo run build --filter=vidstack",
    "build:react": "turbo run build --filter=react",
    "build:site": "turbo run build --filter=site",
    "preview:site": "turbo run preview --filter=site",
    "dev:site": "turbo run dev --filter=site",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && node .scripts/fix-changelog.js",
    "format": "turbo run format --parallel",
    "test": "turbo run test --parallel",
    "test:esm": "node .scripts/test-node-esm.js",
    "preinstall": "npx only-allow pnpm",
    "release": "pnpm build && pnpm test:esm && node .scripts/release.js",
    "release:dry": "pnpm run release --dry",
    "spellcheck": "cspell 'apps/**/*.md' 'packages/**.ts', 'packages/**/.md', '*.md' --gitignore --cache",
    "validate": "turbo run build format test && pnpm test:esm"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.4.0",
    "@types/node": "^17.0.8",
    "chokidar": "^3.5.2",
    "conventional-changelog-cli": "^2.2.2",
    "cross-env": "^7.0.3",
    "cspell": "^5.15.2",
    "enquirer": "^2.3.6",
    "esbuild": "^0.14.29",
    "execa": "^6.0.0",
    "fs-extra": "^10.0.0",
    "globby": "^13.1.1",
    "kleur": "^4.1.4",
    "lint-staged": "^12.1.5",
    "minimist": "^1.2.5",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "rimraf": "^3.0.2",
    "semver": "^7.3.5",
    "simple-git-hooks": "^2.8.0",
    "turbo": "^1.2.4",
    "typescript": "^4.8.5"
  },
  "simple-git-hooks": {
    "pre-commit": "npx --no-install lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,md,json}": "prettier --write",
    "*.{md,ts}": "cspell --no-must-find-files"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "volta": {
    "node": "16.15.1"
  },
  "packageManager": "pnpm@7.2.1"
}
